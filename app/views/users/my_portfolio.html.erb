<% if request.path == "/my_portfolio" %>
<h1>My Porfolio</h1>
<% else %>
<h1><%= @user.first_name %>s'profile</h1>
<% end %>
<div class="search-area">
    <h3>Search Stock</h3>
    <%= form_tag search_stock_path, remote: true, method: :get do %>
        <div class="form-group row">
            <div class="col-9 no-right-padding">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-3 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon "search 2x" %>
                <% end %>
            </div>
        </div>
    <% end %>
<div id="results"></div>
<% if !@tracked_stocks.empty? %>
<%= render "stocks/list" %>
<% end %>